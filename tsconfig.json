{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "~*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"],
      "@public/*": ["public/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}
