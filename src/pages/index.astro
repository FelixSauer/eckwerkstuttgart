---
import {getCollection} from "astro:content";
import Layout from "../layouts/multi.astro";
import Section from "../components/Section.astro";
import "@fontsource-variable/montserrat";
import "@fontsource-variable/fira-code";
import "@fontsource-variable/source-code-pro";
import '@fontsource/source-sans-pro';
import "@fontsource/roboto";
import "./../styles/GlobalStyling.scss";
import IntroImage from "../components/IntroImage.astro";

const pages = await getCollection("pages");
---

<Layout title="Eckwerk Stuttgart">
    <IntroImage imageName={pages[0].data.introImage!.toString()} slogan={pages[0].data.slogan!.toString()}/>
	{pages.map((originPage) =>
		originPage.data.mainStage === true ? (
            <Section page={originPage}/>
		) : null
	)}
</Layout>

<style lang="scss" is:global>
  @import "./../styles/GlobalStyling";
</style>
