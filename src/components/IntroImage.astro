---
import {Image} from 'astro:assets';

interface Props {
	imageName: string;
	slogan: string;
}

const {imageName, slogan} = Astro.props;

let importedImage;
const importImage = async (name: string) => {
	try {
		if (name.endsWith('.jpg') || name.endsWith('.png') || name.endsWith('.svg')) {
			return await import(/* @vite-ignore */ `../assets/images/${name}`);
		} else {
			throw new Error('Unsupported image format');
		}
	} catch (e) {
		console.error(`Failed to import image: ${name}`, e);
	}
};

importedImage = await importImage(imageName);
---

<div>
	{importedImage &&
          <Image src={importedImage.default} alt={slogan} loading="lazy"/>}
	{slogan && <h1>{slogan}</h1>}

    <div>
        <button>Quick Links</button>
    </div>
</div>

<style lang="scss">
  div {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100vh;

    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    h1 {
      position: absolute;
      top: 35%;
      left: 50%;
      transform: translate(-50%, -50%);
      color: white;
      font-size: 1.5rem;
      text-align: center;
