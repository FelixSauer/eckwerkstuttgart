---
import {Image} from 'astro:assets';
import type {ImageMetadata} from 'astro';

interface Props {
	imagePath: string;
	slogan: string;
}
const {imagePath, slogan} = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>('/src/content/albums/Intro/*.{jpeg,jpg,png,gif}');

let imageSrc: ImageMetadata | undefined;
if (images[`/src/content/albums/Intro/${imagePath}`]) {
	imageSrc = (await images[`/src/content/albums/Intro/${imagePath}`]()).default;
} else {
	console.error(`Image not found: src/content/albums/Intro/${imagePath}`);
}
---

<div>
	{imageSrc ?
          <Image src={imageSrc} alt={slogan}/> : <p>Image not found</p>}
	{slogan && <h1>{slogan}</h1>}

    <div>
        <button>Quick Links</button>
    </div>
</div>

<style lang="scss">
  @import "./../styles/GlobalStyling";

  div {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100vh;

    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    h1 {
      position: absolute;
      top: 33%;
      left: 50%;
      transform: translate(-50%, -50%);
      color: white;
      font-size: 1.5rem;
      font-weight: 300;
      text-align: center;
      padding: 0.5rem;
    }

    div {
      position: absolute;
      top: 75%;
      left: 50%;
      transform: translate(-50%, -50%);
      color: white;
      font-size: 1.5rem;
      text-align: center;
      padding: 0.5rem;
    }
  }
</style>
