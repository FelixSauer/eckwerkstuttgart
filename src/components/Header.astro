---
import Navigation from "./Navigation.astro";
import { Icon } from "astro-icon/components";
import type { INavigation } from "../types/navigation";

interface Props {
  navigation: INavigation[];
}

const { navigation } = Astro.props;
---

<header>
  <Icon name="logo" />
  <Navigation navigation={navigation} navigationPostion="header" />
</header>

<style lang="scss">
  @import "./../styles/GlobalStyling";

  header {
    position: fixed;
    background-color: $color-primary;
    height: 40px;
    width: calc(100% - 40px);
    z-index: 100;

    @include min-width("l") {
      display: flex;
      justify-content: space-between;
      width: calc(100% - 40px);
      align-items: center;
      font-size: 1rem;
      height: 140px;
      padding-left: 20px;
      padding-right: 20px;
    }

    [data-icon] {
      @include min-width("l") {
          font-size: 4rem;
      }
    }
  }
</style>
